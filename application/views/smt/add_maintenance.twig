{% extends 'overall/layout.twig' %}

{% block appHeader %}
	<!-- select2 -->
	<link
	rel="stylesheet" href="{{ base_url() }}assets/plugins/select2/css/select2.min.css">
	<!-- DataTables -->
	<link rel="stylesheet" href="{{ base_url() }}assets/plugins/datatables-bs4/css/dataTables.bootstrap4.css">
	<link
	rel="stylesheet" href="{{ base_url() }}assets/plugins/datatables-responsive/css/responsive.bootstrap4.min.css">
	<!-- daterange picker -->
	<link rel="stylesheet" href="{{ base_url() }}assets/plugins/daterangepicker/daterangepicker.css">
    <!-- SweetAlert2 -->
    <link rel="stylesheet" href="{{ base_url() }}assets/plugins/sweetalert2-theme-bootstrap-4/bootstrap-4.min.css">
	<style>

	.form-control.is-invalid, .was-validated .form-control:invalid ~ .select2 .select2-selection {
		border: 1px solid red;
	}

	</style>
{% endblock %}

{% block appBody %}
	<div
		class="content-wrapper">
		<!-- Content Header (Page header) -->
		<section class="content-header">
			<div class="container-fluid">
				<div class="row mb-2">
					<div class="col-sm-6">
						<h1>
							Service Report
						</h1>
					</div>
					<div class="col-sm-6">
						<ol class="breadcrumb float-sm-right">
							<li class="breadcrumb-item">Inicio</li>
                            <li class="breadcrumb-item">Maintenance</li>
							<li class="breadcrumb-item active">Service Report</li>
						</ol>
					</div>
				</div>
			</div>
			<!-- /.container-fluid -->
		</section>

		<!-- Main content -->
		<section class="content">
			<div class="container-fluid">
				<div class="messages"></div>


				<div class="card card-primary card-outline">
					<div class="card-body">

						<div class="addConcept mb-4" >

							<h3>Register Service Report</h3>

							<hr class="mb-4">

							<form id="addConceptForm" autocomplete="off">


								<div class="form-row">

									<input type="hidden" id="idConcept">

									<div class="form-group col-xs-12 col-md-6">
										<label for="customer_address">Customer Address</label>
										<div class="input-group">
											<div class="input-group-prepend">
												<span class="input-group-text">
													<i class="fas fa-address-card"></i>
												</span>
											</div>
											<input type="text" class="form-control" name="customer_address" id="customer_address">
										</div>
									</div>


									<div class="form-group col-xs-12 col-md-6">
										<label for="type_of_service">Type of Service Call</label>
										<div class="input-group">
											<div class="input-group-prepend">
												<span class="input-group-text">
													<i class="fas fa-calendar-check"></i>
												</span>
											</div>
											<input type="text" class="form-control" name="type_of_service" id="type_of_service">
										</div>
									</div>

								</div>

								<div class="form-row">
									<div class="form-group col-xs-12 col-md-6">
										<label for="invoice_to_quote">Invoice to quote</label>
										<div class="input-group">
											<div class="input-group-prepend">
												<span class="input-group-text">
													<i class="fas fa-file-alt"></i>
												</span>
											</div>
											<input type="text" class="form-control" name="invoice_to_quote" id="invoice_to_quote">
										</div>
									</div>
                                    <div class="form-group col-xs-12 col-md-6">
										<label for="customer_po">Customer PO</label>
										<div class="input-group">
											<div class="input-group-prepend">
												<span class="input-group-text">
													<i class="fas fa-user"></i>
												</span>
											</div>
											<input type="text" class="form-control" name="customer_po" id="customer_po">
										</div>
									</div>

								</div>

								<div class="form-row">

                                    <div class="form-group col-xs-12 col-md-6">
										<label for="mc_type">M/C Type</label>
										<div class="input-group">
											<div class="input-group-prepend">
												<span class="input-group-text">
													<i class="fas fa-cog"></i>
												</span>
											</div>
											<input type="text" class="form-control" name="mc_type" id="mc_type">
										</div>
									</div>
                                    <div class="form-group col-xs-12 col-md-6">
										<label for="model">Model</label>
										<div class="input-group">
											<div class="input-group-prepend">
												<span class="input-group-text">
													<i class="fas fa-cog"></i>
												</span>
											</div>
											<input type="text" class="form-control" name="model" id="model">
										</div>
									</div>

								</div>

								<div class="form-row">

                                    <div class="form-group col-xs-12 col-md-6">
										<label for="serial">Serial Number</label>
										<div class="input-group">
											<div class="input-group-prepend">
												<span class="input-group-text">
													<i class="fas fa-hashtag"></i>
												</span>
											</div>
											<input type="text" class="form-control" name="serial" id="serial">
										</div>
									</div>
                                    <div class="form-group col-xs-12 col-md-6">
										<label for="mfg_year">Mfg year</label>
										<div class="input-group">
											<div class="input-group-prepend">
												<span class="input-group-text">
													<i class="fas fa-cogs"></i>
												</span>
											</div>
											<input type="text" class="form-control" name="mfg_year" id="model">
										</div>
									</div>

								</div>

								<div class="form-row">
									<div class="form-group">
										<p class="d-inline"><b>Status: &nbsp;</b></p>
										<div class="form-check form-check-inline">
											<input class="form-check-input" type="radio" name="status" id="status_open" value="open">
											<label class="form-check-label" for="status_open">Open</label>
										</div>
										<div class="form-check form-check-inline">
											<input class="form-check-input" type="radio" name="status" id="status_closed" value="closed">
											<label class="form-check-label" for="status_closed">Closed</label>
										</div>
									</div>
								</div>
								<div class="form-row">
									<div class="form-group">
										<p class="d-inline"><b>Overtime Accepted: &nbsp;</b></p>
										<div class="form-check form-check-inline">
											<input class="form-check-input" type="radio" name="overtime_accepted" id="overtime_yes" value="yes">
											<label class="form-check-label" for="overtime_yes">Yes</label>
										</div>
										<div class="form-check form-check-inline">
											<input class="form-check-input" type="radio" name="overtime_accepted" id="overtime_no" value="no">
											<label class="form-check-label" for="overtime_no">No</label>
										</div>
									</div>
								</div>
								<div class="form-row">
									<div class="form-group">
										<p class="d-inline"><b>Parts Used: &nbsp;</b></p>
										<div class="form-check form-check-inline">
											<input class="form-check-input" type="radio" name="parts_used" id="parts_used_yes" value="yes">
											<label class="form-check-label" for="parts_used_yes">Yes</label>
										</div>
										<div class="form-check form-check-inline">
											<input class="form-check-input" type="radio" name="parts_used" id="parts_used_no" value="no">
											<label class="form-check-label" for="parts_used_no">No</label>
										</div>
									</div>
								</div>

								  <div class="form-group">
									<label for="service_details">Service Details</label>
									<textarea name="service_details" class="form-control" id="service_details" rows="3"></textarea>
								</div>
								
								<div class="form-row">

                                    <div class="form-group col-xs-12 col-md-6">
										<label for="operation">Operation</label>
										<div class="input-group">
											<div class="input-group-prepend">
												<span class="input-group-text">
													<i class="fas fa-wrench"></i>
												</span>
											</div>
											<input type="text" class="form-control" name="operation" id="operation">
										</div>
									</div>
                                    <div class="form-group col-xs-12 col-md-6">
										<label for="date">Date</label>
										<div class="input-group">
											<div class="input-group-prepend">
												<span class="input-group-text">
													<i class="fas fa-regular fa-calendar"></i>
												</span>
											</div>
											<input type="text" class="form-control" name="date" id="date">
										</div>
									</div>

								</div>
								
								<div class="form-row">

                                    <div class="form-group col-xs-12 col-md-4">
										<label for="operation">Start time</label>
										<div class="input-group">
											<div class="input-group-prepend">
												<span class="input-group-text">
													<i class="fas fa-wrench"></i>
												</span>
											</div>
											<input type="text" class="form-control" name="operation" id="operation">
										</div>
									</div>
                                    <div class="form-group col-xs-12 col-md-4">
										<label for="date">End time</label>
										<div class="input-group">
											<div class="input-group-prepend">
												<span class="input-group-text">
													<i class="fas fa-regular fa-calendar"></i>
												</span>
											</div>
											<input type="text" class="form-control" name="date" id="date">
										</div>
									</div>
                                    <div class="form-group col-xs-12 col-md-4">
										<label for="date">Total</label>
										<div class="input-group">
											<div class="input-group-prepend">
												<span class="input-group-text">
													<i class="fas fa-regular fa-calendar"></i>
												</span>
											</div>
											<input type="text" class="form-control" name="date" id="date">
										</div>
									</div>

								</div>
																
								<div class="form-row">

                                    <div class="form-group col-xs-12 col-md-6">
										<label for="operation">Type</label>
										<div class="input-group">
											<div class="input-group-prepend">
												<span class="input-group-text">
													<i class="fas fa-wrench"></i>
												</span>
											</div>
											<input type="text" class="form-control" name="operation" id="operation">
										</div>
									</div>
                                    <div class="form-group col-xs-12 col-md-6">
										<label for="date">Technician</label>
										<div class="input-group">
											<div class="input-group-prepend">
												<span class="input-group-text">
													<i class="fas fa-solid fa-user"></i>
												</span>
											</div>
											<input type="text" class="form-control" name="date" id="date">
										</div>
									</div>

								</div>

								<div class="d-none btn-group float-right" role="group" aria-label="Basic example">

									<input type="submit" class="btn btn-primary btn-submit-concept" value="Añadir"/>
									<button type="button" class="btn btn-secondary btn-concept-cancel">Cancelar</button>
								</div>
							</form>

						</div>

						<button type="submit" class="btn btn-primary mt-5 float-right" id="guardarRequisicion" form="customerForm">Save</button>

					</div>
				</div>
				<!-- /.card -->
			</div>


		</div>
	</section>
	<!-- /.content -->
</div>{% endblock %}{% block appFooter %}
