{% extends 'overall/layout.twig' %}

{% block appHeader %}
	<!-- select2 -->
	<link
	rel="stylesheet" href="{{ base_url() }}assets/plugins/select2/css/select2.min.css">
	<!-- DataTables -->
	<link rel="stylesheet" href="{{ base_url() }}assets/plugins/datatables-bs4/css/dataTables.bootstrap4.css">
	<link
	rel="stylesheet" href="{{ base_url() }}assets/plugins/datatables-responsive/css/responsive.bootstrap4.min.css">
	<!-- daterange picker -->
	<link rel="stylesheet" href="{{ base_url() }}assets/plugins/daterangepicker/daterangepicker.css">
    <!-- SweetAlert2 -->
    <link rel="stylesheet" href="{{ base_url() }}assets/plugins/sweetalert2-theme-bootstrap-4/bootstrap-4.min.css">
	<style>

	.form-control.is-invalid, .was-validated .form-control:invalid ~ .select2 .select2-selection {
		border: 1px solid red;
	}

	</style>
{% endblock %}

{% block appBody %}
	<div
		class="content-wrapper">
		<!-- Content Header (Page header) -->
		<section class="content-header">
			<div class="container-fluid">
				<div class="row mb-2">
					<div class="col-sm-6">
						<h1>
							Incidencias
						</h1>
					</div>
					<div class="col-sm-6">
						<ol class="breadcrumb float-sm-right">
							<li class="breadcrumb-item">Inicio</li>
                            <li class="breadcrumb-item">Incidencias</li>
							<li class="breadcrumb-item active">Nueva incidencia</li>
						</ol>
					</div>
				</div>
			</div>
			<!-- /.container-fluid -->
		</section>

		<!-- Main content -->
		<section class="content">
			<div class="container-fluid">
				<div class="messages"></div>


				<div class="card card-primary card-outline">
					<div class="card-body">

						<div class="addConcept mb-4" >

							<h3>Nueva Incidencia</h3>

							<hr class="mb-4">

							<form id="addConceptForm" autocomplete="off">


								<div class="form-row">

									<input type="hidden" id="idConcept">

									<div class="form-group col-xs-12 col-md-6">
										<label for="name">Nombre</label>
										<div class="input-group">
											<div class="input-group-prepend">
												<span class="input-group-text">
													<i class="fas fa-regular fa-user"></i>
												</span>
											</div>
											<input type="text" class="form-control" name="name" id="name">
										</div>
									</div>


									<div class="form-group col-xs-12 col-md-6">
										<label for="employ_number">No. de empleado</label>
										<div class="input-group">
											<div class="input-group-prepend">
												<span class="input-group-text">
													<i class="fas fa-solid fa-hashtag"></i>
												</span>
											</div>
											<input type="number" min="1" class="form-control" name="employ_number" id="employ_number">
										</div>
									</div>

								</div>

								<div class="form-row">
									<div class="form-group col-xs-12 col-md-6">
										<label for="position">Puesto</label>
										<div class="input-group">
											<div class="input-group-prepend">
												<span class="input-group-text">
													<i class="fas fa-solid fa-address-card"></i>
												</span>
											</div>
											<input type="text" class="form-control" name="position" id="position">
										</div>
									</div>
									<div class="form-group col-xs-12 col-md-6">
										<label for="department">Departamento</label>
										<div class="input-group">
											<div class="input-group-prepend">
												<span class="input-group-text">
													<i class="fas fa-solid fa-building"></i>
												</span>
											</div>
											<input type="text" class="form-control" name="department" id="department">
										</div>
									</div>
								</div>

								<div class="form-row">
									<div class="form-group col-xs-12 col-md-6">
										<label for="current_date">Fecha actual</label>
										<div class="input-group">
											<div class="input-group-prepend">
												<span class="input-group-text">
													<i class="fas fa-calendar-alt"></i>
												</span>
											</div>
											<input type="text" class="form-control" name="current_date" id="current_date">
										</div>
									</div>
									<div class="form-group col-xs-12 col-md-6">
										<label for="immediate_boss">Jefe inmediato</label>
										<div class="input-group">
											<div class="input-group-prepend">
												<span class="input-group-text">
													<i class="fas fa-user-tie"></i>
												</span>
											</div>
											<input type="text" class="form-control" name="immediate_boss" id="immediate_boss">
										</div>
									</div>
								</div>

								<div class="form-row">
									<div class="form-group col-xs-12 col-md-6">
										<label for="company">Empresa</label>
										<div class="input-group">
											<div class="input-group-prepend">
												<span class="input-group-text">
													<i class="far fa-building"></i>
												</span>
											</div>
											<input type="text" class="form-control" name="company" id="company">
										</div>
									</div>
									<div class="form-group col-xs-12 col-md-6">
										<label for="current_date">Fecha de la incidencia</label>
										<div class="input-group">
											<div class="input-group-prepend">
												<span class="input-group-text">
													<i class="fas fa-calendar-alt"></i>
												</span>
											</div>
											<input type="text" class="form-control" name="current_date" id="current_date">
										</div>
									</div>
									
								</div>
								{# Lista de incidencias #}
								<div class="form-group" id="vert-tabs-users" role="tabpanel" aria-labelledby="vert-tabs-users-tab">
									<p><b>Seleccione una Incidencia</b>.</p>
									<div class="form-row">
										<div class="form-group col-xs-12 col-md-6">
											<div class="form-check">
												<input class="form-check-input" type="radio" id="incident_1" name="incident" value="1">
												<label class="form-check-label" for="incident_1">Llegar tarde al área de trabajo</label>
											</div>
											<div class="form-check">
												<input class="form-check-input" type="radio" id="incident_2" name="incident" value="2">
												<label class="form-check-label" for="incident_2">Faltar Injustificadamente</label>
											</div>
											<div class="form-check">
												<input class="form-check-input" type="radio" id="incident_3" name="incident" value="3">
												<label class="form-check-label" for="incident_3">Falta justificada (IMSS)</label>
											</div>
											<div class="form-check">
												<input class="form-check-input" type="radio" id="incident_4" name="incident" value="4">
												<label class="form-check-label" for="incident_4">Paternidad 5 días (PCGS = permiso con goce de sueldo)</label>
											</div>
											<div class="form-check">
												<input class="form-check-input" type="radio" id="incident_5" name="incident" value="5">
												<label class="form-check-label" for="incident_5">Fallecimiento 3 días (Familiar directo: Papás, conyuge e hijos)</label>
											</div>
												<div class="form-check">
												<input class="form-check-input" type="radio" id="incident_6" name="incident" value="6">
												<label class="form-check-label" for="incident_6">Fallecimiento 1 día (Familiar indirecto: abuelos, hermanos y tíos)</label>
											</div>
										</div>
										<div class="form-group col-xs-12 col-md-6">
											<div class="form-check">
												<input class="form-check-input" type="radio" id="incident_7" name="incident" value="7">
												<label class="form-check-label" for="incident_7">Permiso SIN goce de sueldo</label>
											</div>
											<div class="form-check">
												<input class="form-check-input" type="radio" id="incident_8" name="incident" value="8">
												<label class="form-check-label" for="incident_8">Permiso CON goce de sueldo</label>
											</div>
											<div class="form-check">
												<input class="form-check-input" type="radio" id="incident_9" name="incident" value="9">
												<label class="form-check-label" for="incident_9">Período de lactancia (6 meses 1 hr. de Permiso con Goce de Sueldo)</label>
											</div>
											<div class="form-check">
												<input class="form-check-input" type="radio" id="incident_10" name="incident" value="10">
												<label class="form-check-label" for="incident_10">Vacaciones</label>
											</div>
											<div class="form-check">
												<input class="form-check-input" id="incident_11" type="radio" name="incident" value="11">
												<label class="form-check-label" for="incident_11">Otra causa o motivo (mencionar en "Observaciones o comentarios")</label>
											</div>
										</div>
									</div>
									
								</div>
								{# Lista de incidencias #}

								  <div class="form-group">
									<label for="exampleFormControlTextarea1">Observaciones o comentarios</label>
									<textarea class="form-control" id="exampleFormControlTextarea1" rows="3"></textarea>
								</div>

								<div class="btn-group float-right" role="group" aria-label="Basic example">

									<input type="submit" class="btn btn-primary btn-submit-concept" value="Añadir"/>
									<button type="button" class="btn btn-secondary btn-concept-cancel">Cancelar</button>
								</div>
							</form>

						</div>


						<h3>
							Conceptos&nbsp;
							<button class="btn btn-success btn-sm" id="btnShowAdd">
								<i class="fa fa-plus"></i>
								Añadir concepto
							</button>
						</h3>

						<hr class="mb-4">

						<table id="quotationTable" class="table table-bordered table-hover mt-6">
							<thead>
								<tr>
									<th>Descripción</th>
									<th>Cantidad</th>
									<th>Utilidad</th>
									<th>Precio Unitario (cliente)</th>
                                    <th>Importe (cliente)</th>
									<th>Acciones</th>
								</tr>
							</thead>
							<tfoot>
								<tr>
									<th>Descripción</th>
									<th>Cantidad</th>
									<th>Utilidad</th>
									<th>Precio Unitario (cliente)</th>
                                    <th>Importe (cliente)</th>
									<th>Acciones</th>
								</tr>
							</tfoot>
						</table>

						<button type="submit" class="btn btn-primary mt-5 float-right" id="guardarRequisicion" form="customerForm">Guardar cotización</button>

					</div>
				</div>
				<!-- /.card -->
			</div>


		</div>
	</section>
	<!-- /.content -->
</div>{% endblock %}{% block appFooter %}
<!-- select2 -->
<script src="{{ base_url() }}assets/plugins/select2/js/select2.min.js"></script>
<script src="{{ base_url() }}assets/plugins/select2/js/i18n/es.js"></script>
<!-- DataTables -->
<script src="{{ base_url() }}assets/plugins/datatables/jquery.dataTables.js"></script>
<script src="{{ base_url() }}assets/plugins/datatables-bs4/js/dataTables.bootstrap4.js"></script>
<script src="{{ base_url() }}assets/plugins/datatables-responsive/js/dataTables.responsive.min.js"></script>
<script src="{{ base_url() }}assets/plugins/datatables-responsive/js/responsive.bootstrap4.min.js"></script>
<!-- moment -->
<script src="{{ base_url() }}assets/plugins/moment/moment.min.js"></script>
<script src="{{ base_url() }}assets/plugins/moment/locale/es.js"></script>
<!-- date-range-picker -->
<script src="{{ base_url() }}assets/plugins/daterangepicker/daterangepicker.js"></script>
<!-- SweetAlert2 -->
<script src="{{ base_url() }}assets/plugins/sweetalert2/sweetalert2.min.js"></script>
<!-- Quotations -->
<script src="{{ base_url() }}custom/js/quotations.js"></script>
<!-- UUID -->
<script src="https://cdnjs.cloudflare.com/ajax/libs/uuid/8.1.0/uuidv4.min.js"></script>
{% endblock %}