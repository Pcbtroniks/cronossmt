			<th style="text-align:center;width:10%">Cantidad</th>
			<th style="text-align:center;width:10%">Unidad</th>
			<th style="text-align:left;width:40%;">Descripción</th>
			
			<th style="text-align:right;width:20%">P. unitario</th>
			<th style="text-align:right;width:20%">Importe</th>
        </tr>

        {% for concept in concepts %}

		<tr>
			<td class="border-bottom text-center">{{concept.quantity}}</td>
			<td class="border-bottom text-center">{{concept.quantity}}</td>
			<td class="border-bottom">{{concept.description|raw}}</td>
			
			<td class="border-bottom text-right">{{concept.unit_price}}</td>
			<td class='border-bottom text-right'>{{concept.amount}}</td>

		</tr>

        {% endfor %}

	<tr >
		<td colspan=4 class='text-right' style="font-size:18px;">SUBTOTAL </td>
		<td class='text-right' style="font-size:18px;">{{details.subtotal}}</td>
	</tr>

	<tr >
		<td colspan=4 class='text-right' style="font-size:18px;">IVA </td>
		<td class='text-right' style="font-size:18px;">{{details.iva}}</td>
	</tr>

	<tr >
		<td colspan=4 class='text-right' style="font-size:18px;color: #16a085">TOTAL MXN </td>
